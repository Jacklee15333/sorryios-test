  "grammar": [
    {
      "title": "动名词（doing）作主语",
      "definition": "动词的 -ing 形式可以作为名词使用，在句中充当主语。",
      "structure": "doing + 谓语",
      "usage": [
        "表示一件事情或一种行为",
        "作主语时，谓语动词用第三人称单数"
      ],
      "mistakes": [
        {
          "wrong": "Protect the environment become important.",
          "correct": "Protecting the environment becomes important.",
          "explanation": "作主语时需要使用动名词形式"
        }
      ],
      "examples": [
        "Protecting the environment becomes more and more important.",
        "Saving energy is helpful."
      ]
    },
    {
      "title": "第三人称单数谓语动词变化",
      "definition": "当主语是第三人称单数时，一般现在时的谓语动词需要加 -s 或 -es。",
      "structure": "主语（第三人称单数）+ v.-s",
      "usage": [
        "动名词短语作主语，视为单数",
        "不可数名词作主语，视为单数"
      ],
      "mistakes": [
        {
          "wrong": "Protecting the environment become important.",
          "correct": "Protecting the environment becomes important.",
          "explanation": "主语是第三人称单数，谓语动词需加 -s"
        }
      ],
      "examples": [
        "It becomes cold.",
        "Doing exercise helps a lot."
      ]
    },
    {
      "title": "比较级结构 more and more",
      "definition": "用于表示事物随着时间推移不断变化，程度逐渐加深。",
      "structure": "more and more + adj.",
      "usage": [
        "常与表示变化的动词连用，如 become, get",
        "不能单独用 more important 表示“越来越”"
      ],
      "mistakes": [
        {
          "wrong": "It becomes more important and more.",
          "correct": "It becomes more and more important.",
          "explanation": "固定结构为 more and more + adj."
        }
      ],
      "examples": [
        "The environment is getting more and more serious.",
        "English is becoming more and more useful."
      ]
    },
    {
      "title": "tell / talk / speak 的用法区别",
      "definition": "这三个动词都与“说话”有关，但用法和搭配不同。",
      "structure": "tell sb. sth. / tell sb. to do sth.; talk to/with sb.; speak to sb.",
      "usage": [
        "tell：强调传递信息，常接双宾语",
        "talk：强调交谈，常与介词 to / with / about 连用",
        "speak：较正式，强调说话能力或正式交流"
      ],
      "mistakes": [
        {
          "wrong": "tell sb. doing sth.",
          "correct": "tell sb. to do sth.",
          "explanation": "tell 后不能直接接 doing 形式"
        }
      ],
      "examples": [
        "The teacher told us to finish the homework.",
        "I talked with my friend.",
        "She can speak English well."
      ]
    },
    {
      "title": "句子连接与主语完整性",
      "definition": "英语中两个完整句子不能只用逗号连接，需要连词或从句结构。",
      "structure": "句子 + and/but/so + 句子",
      "usage": [
        "每个句子都需要明确的主语",
        "可以用 it 指代前面整件事情"
      ],
      "mistakes": [
        {
          "wrong": "We should protect the environment, make our life better.",
          "correct": "We should protect the environment, and it can make our life better.",
          "explanation": "后一句缺少主语和连接词"
        }
      ],
      "examples": [
        "We should protect the environment, and it helps us live better.",
        "It is important, so we must act now."
      ]
    },
    {
      "title": "tell / say / speak / talk 的区别",
      "definition": "这四个动词都与“说”有关，但强调点和搭配不同。",
      "structure": "tell sb. sth.; say + 内容; speak + 语言; talk to/with sb.",
      "usage": [
        "tell：强调传递信息，常接双宾语",
        "say：强调说的内容",
        "speak：强调说话的方式或语言",
        "talk：强调交谈的过程，需与介词连用"
      ],
      "mistakes": [
        {
          "wrong": "tell sb. doing sth.",
          "correct": "tell sb. to do sth.",
          "explanation": "tell 后不能直接接 doing 形式"
        }
      ],
      "examples": [
        "She told me a story.",
        "He said it was true.",
        "She speaks French.",
        "They talked about the problem."
      ]
    },
    {
      "title": "过去式与过去分词的区别",
      "definition": "过去式主要用于表示过去发生的动作，过去分词用于更多语法结构。",
      "structure": "过去式：v.-ed / 不规则变化；过去分词：v.-ed / 不规则变化",
      "usage": [
        "过去式：表示过去发生的动作",
        "过去分词：用于完成时、被动语态和作形容词"
      ],
      "mistakes": [
        {
          "wrong": "I have ate rice.",
          "correct": "I have eaten rice.",
          "explanation": "现在完成时需要使用过去分词"
        }
      ],
      "examples": [
        "I ate rice yesterday.",
        "I have eaten rice."
      ]
    },
    {
      "title": "过去分词的三种主要用法",
      "definition": "过去分词不仅表示完成，还可用于被动语态和作形容词。",
