  "grammar": [
    {
      "title": "动名词作主语",
      "definition": "动词加 -ing 形式可以当作名词，在句中作主语",
      "structure": "V-ing + 谓语 + 其他成分",
      "usage": [
        "动名词作主语时，谓语动词用单数",
        "表示一件事情或一种行为"
      ],
      "mistakes": [
        {
          "wrong": "Protect the environment become important.",
          "correct": "Protecting the environment becomes important.",
          "explanation": "主语应使用动名词形式"
        }
      ],
      "examples": [
        "Protecting the environment becomes more and more important."
      ]
    },
    {
      "title": "主谓一致（单数主语）",
      "definition": "当主语表示一件事或不可数概念时，谓语动词用第三人称单数",
      "structure": "单数主语 + 谓语动词第三人称单数",
      "usage": [
        "动名词短语作主语视为单数",
        "谓语动词现在时加 -s"
      ],
      "mistakes": [
        {
          "wrong": "Protecting the environment become important.",
          "correct": "Protecting the environment becomes important.",
          "explanation": "主语为单数，谓语需加 -s"
        }
      ],
      "examples": [
        "Saving energy helps the environment."
      ]
    },
    {
      "title": "并列句与连接词",
      "definition": "英语中两句话不能只用逗号连接，需要使用连接词或改为复合句",
      "structure": "句子 + and/but/so + 句子",
      "usage": [
        "and 表示并列或顺承",
        "避免逗号拼接两个完整句"
      ],
      "mistakes": [
        {
          "wrong": "We should protect the environment, it makes our life better.",
          "correct": "We should protect the environment, and it makes our life better.",
          "explanation": "两句完整句子之间需要连接词"
        }
      ],
      "examples": [
        "We should protect the environment, and it can make our life better."
      ]
    },
    {
      "title": "tell / say / talk / speak 的区别",
      "definition": "这些动词都与“说”有关，但用法和搭配不同",
      "structure": "tell sb. to do sth. / say sth. / talk about sth. / speak to sb.",
      "usage": [
        "tell：tell sb. to do sth. 或 tell sb. sth.",
        "say：强调说的内容，后接宾语或从句",
        "talk：强调交谈，常用 talk about / talk with / talk to",
        "speak：偏正式，多指说某种语言或正式发言"
      ],
      "mistakes": [
        {
          "wrong": "tell me doing it",
          "correct": "tell me to do it",
          "explanation": "tell 后不能直接接 doing"
        }
      ],
      "examples": [
        "He told me to turn off the light.",
        "We talked about the environment."
      ]
    },
    {
      "title": "tell / say / talk / speak 的用法区别（进阶）",
      "definition": "四个动词都与“说”有关，但侧重点和搭配不同",
      "structure": "tell sb. to do sth. / say + 内容 / talk to sb. / speak + 语言",
      "usage": [
        "tell：强调传递信息或命令，后接人",
        "say：强调说的内容",
        "talk：强调双方交流，常接介词",
        "speak：强调说话方式或语言能力"
      ],
      "mistakes": [
        {
          "wrong": "tell me doing it",
          "correct": "tell me to do it",
          "explanation": "tell 后不能接 doing"
        }
      ],
      "examples": [
        "He speaks English.",
        "She said it was true."
      ]
