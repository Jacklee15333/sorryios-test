{
  "name": "ai-smart-notes",
  "version": "1.0.0",
  "description": "AI智能课堂笔记 - 智能学习系统",
  "main": "main.js",
  "author": "Sorryios",
  "scripts": {
    "start": "electron .",
    "prebuild": "cd ../frontend && npm install && npx vite build",
    "pack": "electron-builder --dir",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "devDependencies": {
    "electron": "33.3.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.sorryios.ai-notes",
    "productName": "AI智能课堂笔记",
    "copyright": "Copyright 2026",
    "directories": {
      "output": "../release"
    },
    "files": [
      "main.js",
      "config.json",
      "app.ico"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!uploads/**",
          "!outputs/**",
          "!*.log"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [],
    "win": {
      "icon": "app.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AI智能课堂笔记",
      "installerIcon": "app.ico",
      "uninstallerIcon": "app.ico",
      "installerHeaderIcon": "app.ico",
      "language": "2052"
    }
  }
}
